{
  "manifest_version": 3,
  "name": "LinkShrink",
  "version": "1.0",
  "description": "Quickly shorten URLs for easy sharing.",
  "permissions": ["clipboardWrite"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
